        <mxCell id="1" parent="0" />

        <!-- Start Node -->
        <mxCell id="start" value="Start: User Opens App" style="ellipse;fillColor=#D5E8D4;strokeColor=#82B366;" vertex="1" parent="1">
          <mxGeometry x="300" y="50" width="160" height="50" as="geometry" />
        </mxCell>

